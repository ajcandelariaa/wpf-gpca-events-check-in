<UserControl x:Class="GPCAEventsCheckIn.View.UserControl.AddAttendeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1366">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="40 20 40 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Onsite Registration"
                               FontSize="26"
                               FontWeight="Bold"/>
                    <TextBlock Text="Please fill in the attendee details below."
                               FontSize="14"
                               Foreground="#777"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Image Grid.Column="1"
                       Source="../../Assets/Images/Common/img_return.png"
                       Cursor="Hand"
                       Width="200"
                       Height="50"
                       HorizontalAlignment="Right"
                       MouseLeftButtonDown="Btn_Return"/>
                
            </Grid>

            <Border Grid.Row="1"
                    Margin="40 0 40 20"
                    Background="White"
                    CornerRadius="12"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Padding="24">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 0 16 20">
                        <TextBlock Text="Pass Type" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <ComboBox x:Name="Cb_PassType"
                                      SelectionChanged="Cb_PassType_SelectionChanged" Width="Auto"/>
                        </Border>
                    </StackPanel>


                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="16 0 16 20">
                        <TextBlock Text="Company Name" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <Grid>
                                <ComboBox x:Name="Cb_CompanyName" Width="Auto"/>
                                <TextBox x:Name="Tb_CompanyName"
                                         Visibility="Collapsed"  Width="Auto"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="16 0 0 20">
                        <TextBlock Text="Company Sector" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <ComboBox x:Name="Cb_CompanySector" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0 0 16 20">
                        <TextBlock Text="Company Address" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_Address" Width="Auto" AcceptsReturn="True" TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="16 0 16 20">
                        <TextBlock Text="Company Country" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <ComboBox x:Name="Cb_Country" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="16 0 0 20">
                        <TextBlock Text="Promo Code (optional)" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_PromoCode" Width="Auto"/>
                        </Border>
                    </StackPanel>


                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0 0 16 20">
                        <TextBlock Text="First Name" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_FirstName" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="16 0 16 20">
                        <TextBlock Text="Last Name" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_LastName" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="2" Margin="16 0 0 20">
                        <TextBlock Text="Job Title" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_JobTitle" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0 0 16 20">
                        <TextBlock Text="Email Address" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_Email" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="16 0 16 20">
                        <TextBlock Text="Contact Number" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <TextBox x:Name="Tb_ContactNumber" Width="Auto"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="2" Margin="16 0 0 20">
                        <TextBlock Text="Nationality" FontSize="16" FontWeight="SemiBold"/>
                        <Border Background="#F2F2F2" BorderBrush="#D9D9D9"
                                BorderThickness="1" CornerRadius="8">
                            <ComboBox x:Name="Cb_Nationality" Width="Auto"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 0 0 30">
                <Button Content="Next"
                        Padding="40 10 40 10"
                        Click="Btn_Next"
                        Style="{StaticResource SubmitButtonStyle}"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
