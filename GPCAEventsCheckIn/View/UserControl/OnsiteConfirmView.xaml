<UserControl x:Class="GPCAEventsCheckIn.View.UserControl.OnsiteConfirmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1366">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="40 20 40 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Onsite Registration - Preview"
                               FontSize="26"
                               FontWeight="Bold"/>
                    <TextBlock Text="Please review the attendee and pricing details before confirming."
                               FontSize="14"
                               Foreground="#777"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Image Grid.Column="1"
                       Source="../../Assets/Images/Common/img_return.png"
                       Cursor="Hand"
                       Width="200"
                       Height="50"
                       HorizontalAlignment="Right"
                       MouseLeftButtonDown="Btn_Return"/>
            </Grid>

            <!-- Main content card -->
            <Border Grid.Row="1"
        Margin="40 0 40 20"
        Background="White"
        CornerRadius="12"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        Padding="24">

                <!-- Center the main content and limit width -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Attendee -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacer -->
                        <ColumnDefinition Width="40"/>
                        <!-- Pricing -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacer -->
                        <ColumnDefinition Width="40"/>
                        <!-- Options -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Attendee details -->
                    <StackPanel Grid.Column="0"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 0"
                    Width="450">
                        <TextBlock Text="Attendee Details"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>
                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="Full Name" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_FullName"
                           FontSize="16"
                           Foreground="#555"
                           TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0 10 0 6">
                            <TextBlock Text="Job Title" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_JobTitle"
                           FontSize="16"
                           Foreground="#555"
                           TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0 10 0 6">
                            <TextBlock Text="Company Name" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_CompanyName"
                           FontSize="16"
                           Foreground="#555"
                           TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0 10 0 6">
                            <TextBlock Text="Badge Type" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_BadgeType"
                           FontSize="16"
                           Foreground="#555"
                           TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Pricing details -->
                    <StackPanel Grid.Column="2"
                    Width="350">
                        <TextBlock Text="Pricing"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="0 0 0 10"/>

                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="Description" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_PricingDescription"
                           FontSize="16"
                           Foreground="#555"
                           TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="Unit Price" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_UnitPrice"
                           FontSize="16"
                           Foreground="#555"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="Discount" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_DiscountPrice"
                           FontSize="16"
                           Foreground="#555"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="Net Amount" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_NetAmount"
                           FontSize="16"
                           Foreground="#555"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="Total Before VAT" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_TotalBeforeVat"
                           FontSize="16"
                           Foreground="#555"/>
                        </StackPanel>

                        <StackPanel Margin="0 0 0 6">
                            <TextBlock Text="VAT" FontWeight="SemiBold" FontSize="15"/>
                            <TextBlock x:Name="Tb_VatAmount"
                           FontSize="16"
                           Foreground="#555"/>
                        </StackPanel>

                        <!-- Highlighted total -->
                        <StackPanel Margin="0 4 0 10">
                            <TextBlock Text="Total Amount" FontWeight="Bold" FontSize="16"/>
                            <TextBlock x:Name="Tb_TotalAmount"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#000"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Options + Status -->
                    <Border Grid.Column="4"
                Background="#F9F9F9"
                CornerRadius="8"
                Padding="16"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                MinWidth="260"
                Margin="0 0 0 0">
                        <StackPanel>
                            <TextBlock Text="Options"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0 0 0 10"/>

                            <UniformGrid Columns="2" Margin="0 0 0 10">
                                <CheckBox x:Name="Cb_IsPaid"
                              Content="Payment received (mark as paid)"
                              FontSize="16"
                              Margin="0 4"
                              HorizontalAlignment="Left"
                              Cursor="Hand"
                              Checked="OptionChanged"
                              Unchecked="OptionChanged"/>

                                <CheckBox x:Name="Cb_PrintBadge"
                              Content="Print badge now"
                              FontSize="16"
                              Margin="0 4"
                              HorizontalAlignment="Left"
                              Cursor="Hand"
                              Checked="OptionChanged"
                              Unchecked="OptionChanged"/>

                                <CheckBox x:Name="Cb_SendEmail"
                              Content="Send confirmation email"
                              FontSize="16"
                              Margin="0 4"
                              HorizontalAlignment="Left"
                              Checked="OptionChanged"
                              Cursor="Hand"
                              Unchecked="OptionChanged"/>

                                <CheckBox x:Name="Cb_AddToApp"
                              Content="Add attendee to app"
                              FontSize="16"
                              Margin="0 4"
                              HorizontalAlignment="Left"
                              Cursor="Hand"
                              Checked="OptionChanged"
                              Unchecked="OptionChanged"/>
                            </UniformGrid>

                            <StackPanel>
                                <TextBlock Text="Resulting Status"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0 20 0 4"/>
                                <TextBlock x:Name="Tb_StatusPreview"
                               FontSize="16"
                               Foreground="#555"
                               TextWrapping="Wrap"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </Grid>
            </Border>


            <!-- Bottom buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 0 0 30">
                <Button Content="Submit"
                        Padding="40 10 40 10"
                        Click="Btn_Submit"
                        Style="{StaticResource SubmitButtonStyle}"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
